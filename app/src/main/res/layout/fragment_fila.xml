<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Spinner Tipo de Combustible -->
        <Spinner
            android:id="@+id/spinnerTipoFila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="8dp" />

        <!-- Spinner Estación -->
        <Spinner
            android:id="@+id/spinnerEstacionFila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="8dp" />

        <!-- Stock disponible -->
        <TextView
            android:id="@+id/txtStockDisponible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock disponible: -"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/btnConfirmarFila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Fila"
            android:layout_marginBottom="12dp" />

        <!-- Resumen -->
        <TextView
            android:id="@+id/txtResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen..."
            android:textSize="16sp"
            android:textColor="#222222"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="12dp" />


        <!-- Mapa -->
        <fragment
            android:id="@+id/mapFila"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>
</ScrollView>
